{
    "name": "designsecurity/progpilot",
    "description": "A Static Analyser for security",
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Therond",
            "email": "eric.therond.fr@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ircmaxell/php-cfg": "^0.7.0",
        "symfony/yaml": "^5.4.17",
        "symfony/console": "^5.4.17",
        "myclabs/deep-copy": "^1.11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "phpro/grumphp": "^1.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "bin": ["projects/phar/progpilot"],
    "autoload": {
        "psr-0": {
            "progpilot": "package/src"
        }
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
